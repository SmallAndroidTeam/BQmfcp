    <ImageView
        android:id="@+id/bg_deep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="682px"
        android:layout_marginTop="584px"
        android:background="@mipmap/bg_deep" />

    <Button
        android:id="@+id/btn_high"
        android:layout_width="116dp"
        android:layout_height="85px"
        android:layout_alignEnd="@+id/bg_deep"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-28dp"
        android:background="@drawable/button_frame"
        android:text="高"
        android:textSize="36px" />

    <Button
        android:id="@+id/btn_low"
        android:layout_width="116dp"
        android:layout_height="85px"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/bg_deep"
        android:background="@mipmap/bg_deep"
        android:text="低"
        android:textSize="36px" />



    <Button
        android:id="@+id/btn_fragrance_openorclose"
        android:layout_width="127dp"
        android:layout_height="43dp"
        android:layout_alignBottom="@+id/bg_deep"
        android:layout_alignParentStart="true"
        android:layout_marginStart="79px"
        android:text="打开"
