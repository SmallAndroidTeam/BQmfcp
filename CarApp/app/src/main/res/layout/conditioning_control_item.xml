    <ImageView
        android:id="@+id/btn_TemperatureDown_Driver_Line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65px"
        android:layout_marginTop="410px"
        android:background="@mipmap/bg_line_low" />


    <ImageView
        android:id="@+id/btn_WindSpeedDown_ViceDriver_Line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="65px"
        android:layout_alignTop="@+id/btn_TemperatureDown_Driver_Line"
        android:background="@mipmap/bg_line_low" />

</RelativeLayout>