        android:layout_marginTop="84px"
        android:background="@mipmap/bg_line_high" />


    <ImageView
        android:id="@+id/btn_WindSpeedUp_ViceDriver_Line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/IB_TemperatureUp_Driver"
        android:layout_marginEnd="65px"
