        android:textSize="18px"
        android:textColor="#BFF6FF" />


    <ImageButton
        android:id="@+id/IB_TemperatureDown_Driver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="418px"
        android:layout_marginLeft="99px"
        android:background="@mipmap/icon_minus" />


    <ImageButton
        android:id="@+id/IB_WindSpeedUp_Driver"
        android:layout_width="wrap_content"
